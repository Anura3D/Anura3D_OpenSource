<!-- 
  Purpose: Create the "Material Point Selection" section in GiD and store inputs
  Used by: GiD for creating the Material Point selction screen and by the createGOM and createCPS files to write material points params to the respective file
  
  Notes: The conditions are based on the problem dimension (2D or 2D) and the use of the single or double point formulation
         The "status" parameter determines if the condition is true or false
         procedure check_dim_points (defined in Anura3D_2023.tcl) is the logical function checked to determine the status values and the values following that call are the input parameters for
         the procedure
         See https://downloads.gidsimulation.com/GiD_Documentation/Docs/GiD16/GiD_16_Customization_Manual.pdf page 21 for more info on condtions and ov settings 
-->

<!-- A container is basically object depending on the conditions below the properties of the container are set -->
<container n="MPspecification" pn="Material Point Specification" icon="icon_mps">
  
  <!-- Condition for 2D single point formulation --> 
  <!-- Works for triangle and quadrilateral elements --> 
  <condition n="2D_Single-point" pn="2D Single-point" ov="surface" ovm="element" ov_element_types="triangle,quadrilateral" icon="darkorange-shellfish-18" groups_icon="yelowish-group" help="Select your material and the surfaces related to it" state="[check_dim_points 2D:plane-strain 2D:Axissymmetric Single_point %W]">
    <!-- TODO: Change the MP enry make to a list selection and add a condition (possible in Units_Dimensions) that selects the element type and is used here -->
    <value n="material" pn="Material" editable='0' help="Choose a material from the database" values='[ANURA3D_2023::GetMaterialsList %W]' v="specify">
      <edit_command n="Edit materials" pn="Edit materials" icon="darkorange-block1.png" proc='ANURA3D_2023::EditDatabaseListDirect %W %DICT %BC'/>
    </value>
    <!-- <value n="element_type" pn="Select Element type" values="triangle, quadrilateral" v="0" help="Element type for the surface"/> -->
    <!-- Add condition here that allows selection of the number of MPs instead of just typing in a number -->
    <value n="solid_MP_number" pn="Number of solid material points" editable = '0' v="0" help="Number of material points per element"/>
    <value n="material_damping" pn="Material viscous damping" editable='0' help="Damping coefficient" v="0.0"/>
  </condition>

  <!-- if condition for 2D_Double-point -->
  <condition n="2D_Double-point" pn="2D Double-point" ov="surface" ovm="element" ov_element_types="triangle,quadrilateral" icon="darkorange-shellfish-18" groups_icon="yelowish-group" help="Select your material and the surfaces related to it" state="[check_dim_points 2D:plane-strain 2D:Axissymmetric Double_point %W]">
    <value n="material" pn="Material" editable='0' help="Choose a material from the database" values='[ANURA3D_2023::GetMaterialsList %W]' v="specify">
      <edit_command n="Edit materials" pn="Edit materials" icon="darkorange-block1.png" proc='ANURA3D_2023::EditDatabaseListDirect %W %DICT %BC'/>
    </value>
    <value n="solid_MP_number" pn="Number of solid material points" values="0,1,3,6,12,16,25,46,88" v="0" help="Number of solid material points per element"/>
    <value n="liquid_MP_number" pn="Number of liquid material points" values="0,1,3,6,12,16,25,46,88" v="0" help="Number of liquid material points per element"/>
    <value n="material_damping" pn="Material viscous damping" editable='0' help="Damping coefficient" v="0.0"/>
  </condition>

  <!-- TODO: Add hexahedral elements for 3D_single-point -->
  <!-- if condition for 3D Single-point -->
  <condition n="3D_Single-point" pn="3D Single-point" ov="volume" ovm="element" ov_element_types="tetrahedra" icon="darkorange-shellfish-18" groups_icon="yelowish-group" help="Select your material and the surfaces related to it" state="[check_dim_points 3D 3D:Axissymmetric Single_point %W]">
    <value n="material" pn="Material" editable='0' help="Choose a material from the database" values='[ANURA3D_2023::GetMaterialsList %W]' v="specify">
      <edit_command n="Edit materials" pn="Edit materials" icon="darkorange-block1.png" proc='ANURA3D_2023::EditDatabaseListDirect %W %DICT %BC'/>
    </value>
    <value n="solid_MP_number" pn="Number of material points" values="0,1,4,7,8,10,13,20" v="0" help="Number of material points per element"/>
    <value n="material_damping" pn="Material viscous damping" editable='0' help="Damping coefficient" v="0.0"/>
  </condition>

  <!-- TODO: Add hexahedral elements for 3D_single-point -->
  <!-- if condition for 3D double-point -->
  <condition n="3D_Double-point" pn="3D Double-point" ov="volume" ovm="element" ov_element_types="tetrahedra" icon="darkorange-shellfish-18" groups_icon="yelowish-group" help="Select your material and the surfaces related to it" state="[check_dim_points 3D 3D:Axissymmetric Double_point %W]">
    <value n="material" pn="Material" editable='0' help="Choose a material from the database" values='[ANURA3D_2023::GetMaterialsList %W]' v="specify">
      <edit_command n="Edit materials" pn="Edit materials" icon="darkorange-block1.png" proc='ANURA3D_2023::EditDatabaseListDirect %W %DICT %BC'/>
    </value>
    <value n="solid_MP_number" pn="Number of solid material points" values="0,1,4,7,8,10,13,20" v="0" help="Number of solid material points per element"/>
    <value n="liquid_MP_number" pn="Number of liquid material points" values="0,1,4,7,8,10,13,20" v="0" help="Number of liquid material points per element"/>
    <value n="material_damping" pn="Material viscous damping" editable='0' help="Damping coefficient" v="0.0"/>
  </condition>
</container>
